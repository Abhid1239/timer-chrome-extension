{
  "manifest_version": 3,
  "name": "Timer",
  "version": "1.2",
  "description": "Displays a configurable timer on every page that persists across tabs and reloads.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "assets.js",
        "content-ui.js",
        "content-settings.js",
        "content-state.js",
        "content-drag.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timer",
    "default_icon": {
      "16": "t2.png",
      "32": "t2.png",
      "48": "t2.png",
      "128": "t2.png"
    }
  },
  "icons": {
    "16": "t2.png",
    "32": "t2.png",
    "48": "t2.png",
    "128": "t2.png"
  }
}
