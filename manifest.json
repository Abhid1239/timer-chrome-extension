{
  "manifest_version": 3,
  "name": "Timer",
  "version": "1.2",
  "description": "Displays a configurable timer on every page that persists across tabs and reloads.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timer"
  }
}
